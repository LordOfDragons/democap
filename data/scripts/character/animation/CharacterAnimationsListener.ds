namespace Democap.Characters


/**
 * Character animations listener.
 */
interface CharacterAnimationsListener
	/** Character animation added. */
	func void animationAdded(CharacterAnimations animation, CharacterAnimation animation)
	
	/** Character animation removed. */
	func void animationRemoved(CharacterAnimations animation, CharacterAnimation animation)
	
	/** Animation name changed. */
	func void animationNameChanged(CharacterAnimations animations, CharacterAnimation animation)
	
	/** All character animation removed. */
	func void allAnimationsRemoved(CharacterAnimations animations)
	
	/** Active animation changed. */
	func void activeAnimationChanged(CharacterAnimations animations)
end
