<?xml version='1.0' encoding='ISO-8859-1'?>
<guiTheme extend='main.guitheme.xml'>
	<!--
	VR Menus. Modifies main GUI Theme to be better usable in VR.
	-->
	
	<designer name='Label' extendNamed='Label'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.ListRenderer' extendNamed='Label.ListRenderer'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.ListRenderer.Selected' extendNamed='Label.ListRenderer.Selected'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.CheckBox' extendNamed='Label.CheckBox'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.OptionBox' extendNamed='Label.OptionBox'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.WindowToolTip' extendNamed='Label.WindowToolTip'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<!--
	Desktop.
	-->
	<designer name='Desktop' type='Desktop'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0' a='0.9'/>
		</canvasCreator>
		<mousePointer parameter='normal.mousePointer' type='Image'>
			<image parameter='image'>/shareddata/guithemes/modern/mousepointer/default.png</image>
		</mousePointer>
	</designer>
	
	<!--
	Main window
	-->
	<designer name='Label.FormCaption' extendNamed='Label.FormCaption'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.FormCaption.Hilight' extendNamed='Label.FormCaption.Hilight'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelCharacter.CharacterSelection' extendNamed='Panel.WMPanelCharacter.CharacterSelection'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelActor.ActorSelection' extendNamed='Panel.WMPanelActor.ActorSelection'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelSession.Session' extendNamed='Panel.WMPanelSession.Session'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.Button.Icon' type='Label'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
		<point parameter='normal.minimumSize' x='36' y='36'/>
	</designer>
	
	<designer name='Label.Button.Popup' extendNamed='Label.Button.Icon'/>
	
	<designer name='Label.Button.Browse' extendNamed='Label.Button.Icon'>
		<canvasCreator parameter='normal.canvas' type='Image'>
			<image parameter='image'>images/icon_browse_36.png</image>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0' g='0' b='1'/>
			</colorMatrix>
		</canvasCreator>
	</designer>
	
	<designer name='Label.Button.Edit' extendNamed='Label.Button.Icon'>
		<canvasCreator parameter='normal.canvas' type='Image'>
			<image parameter='image'>images/icon_edit_36.png</image>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0.75' g='0' b='0'/>
			</colorMatrix>
		</canvasCreator>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.Configuration' extendNamed='Panel.WMPanelConfiguration.Configuration'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.Camera' extendNamed='Panel.WMPanelConfiguration.Camera'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.TrackerSlots' extendNamed='Panel.WMPanelConfiguration.TrackerSlots'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.MotionTransfers' extendNamed='Panel.WMPanelConfiguration.MotionTransfers'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.MotionTransferTracker.Source'
		extendNamed='Panel.WMPanelConfiguration.MotionTransferTracker.Source'>
			<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.MotionTransferTracker.Target'
		extendNamed='Panel.WMPanelConfiguration.MotionTransferTracker.Target'>
			<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.MotionTransferTracker.Guide'
		extendNamed='Panel.WMPanelConfiguration.MotionTransferTracker.Guide'>
			<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelConfiguration.MotionTransferTracker.Base'
		extendNamed='Panel.WMPanelConfiguration.MotionTransferTracker.Base'>
			<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<!--
	WindowConsole.
	-->
	<designer name='Label.WindowConsole' extendNamed='Label.WindowConsole'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.WindowConsole.Timestamp' extendNamed='Label.WindowConsole.Timestamp'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<!--
	HUD Info.
	-->
	<designer name='ProgressBar.HudInfo' extendNamed='ProgressBar'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
		<canvasCreator parameter='normal.canvas' extend='/shareddata/guithemes/modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0' g='0' b='0' a='1'/>
			</colorMatrix>
		</canvasCreator>
		<point parameter='normal.minimumSize' x='350' y='40'/>
	</designer>
	
	<designer name='Label.HudInfo.InfoLarge' extendNamed='Label'>
		<font parameter='normal.font' size='60'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
		<color parameter='normal.textColor' r='1' g='0' b='0'/>
	</designer>
	
	<designer name='Panel.HudInfo.Recording' type='Widget'>
		<borderSize parameter='normal.padding' all='20'/>
	</designer>
</guiTheme>
