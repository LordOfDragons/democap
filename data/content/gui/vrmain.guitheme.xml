<?xml version='1.0' encoding='ISO-8859-1'?>
<guiTheme extend='main.guitheme.xml'>
	<!--
	VR Menus. Modifies main GUI Theme to be better usable in VR.
	-->
	
	<designer name='Label' extendNamed='Label'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.ListRenderer' extendNamed='Label.ListRenderer'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.ListRenderer.Selected' extendNamed='Label.ListRenderer.Selected'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.CheckBox' extendNamed='Label.CheckBox'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Label.OptionBox' extendNamed='Label.OptionBox'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<!--
	Desktop.
	-->
	<designer name='Desktop' type='Desktop'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0' a='0.9'/>
		</canvasCreator>
		<mousePointer parameter='normal.mousePointer' type='Image'>
			<image parameter='image'>/shareddata/guithemes/modern/mousepointer/default.png</image>
		</mousePointer>
	</designer>
	
	<!--
	Main window
	-->
	<designer name='Label.FormCaption' extendNamed='Label.FormCaption'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Panel.WMPanelCharacter.CharacterSelection' extendNamed='Panel.WMPanelCharacter.CharacterSelection'>
		<font parameter='normal.font' size='30'>/shareddata/guithemes/modern/fonts/sans15.defont</font>
	</designer>
</guiTheme>
